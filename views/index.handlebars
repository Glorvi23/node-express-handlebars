<div class="container text-center">
  <div class="row">
    <div class="col">
      {{!-- Add hamburger photo --}}
      <h1>Eat-Da-Burger</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      {{!-- devoured list --}}
      <h2>burgers that are not devouredly!</h2>

      <ol type="1" class="card">
        {{#each burgers}}
          {{#unless devouredly}}
            {{> burgers/burger-block devour=false}}
          {{/unless}}
        {{/each}}
      </ol>
    </div>

    <div class="col-6">
      {{!-- not devoured list --}}
      <h2>burgers that are devouredly!</h2>

      <ol class="card">
        {{#each burgers}}
          {{#if devouredly}}
            {{> burgers/burger-block devour=true}}
          {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>
</div>

{{!-- <h1>burgers!</h1> --}}



{{!-- <h2>Add a burger</h2> --}}
